function hideAll(){
  document.querySelectorAll(".card").forEach(c=>c.classList.add("hidden"));
}

function send(){
  const f = from.value.trim();
  const t = to.value.trim();
  const c = cat.value;

  if(!f || !t || !c){
    alert("Fill all fields ğŸ™‚");
    return;
  }

  const url =
    BASE_URL +
    "?cat=" + encodeURIComponent(c) +
    "&from=" + encodeURIComponent(f) +
    "&to=" + encodeURIComponent(t);

  hideAll();
  sentBox.classList.remove("hidden");
  link.value = url;
}

function copyLink(){
  link.select();
  document.execCommand("copy");
  alert("Link copied ğŸ˜Œ");
}

function shareWA(){
  const text =
    "ğŸ’˜ You got a secret Valentineâ€¦\nOnly you can see it ğŸ˜Œ\n\n" +
    link.value;
  window.open("https://wa.me/?text=" + encodeURIComponent(text));
}

/* RECEIVER LOGIC */
const params = new URLSearchParams(window.location.search);
if(params.has("cat") && params.has("from") && params.has("to")){
  hideAll();
  coverBox.classList.remove("hidden");

  window.rcv = {
    cat: params.get("cat"),
    from: params.get("from"),
    to: params.get("to")
  };
}

function openCard(){
  const list = messages[rcv.cat];
  const msg = list[Math.floor(Math.random() * list.length)];

  hideAll();
  msgBox.classList.remove("hidden");
  message.innerText = msg;
  names.innerText = "From: " + rcv.from + " â†’ To: " + rcv.to;
}

function goHome(){
  window.location.replace(BASE_URL.split("?")[0]);
